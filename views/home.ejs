                    <div class="blog-card">
                        <span class="blog-number">
                            <%= index+ 1 %>
                        </span>
                        <h4>
                            <%= posts[index].title %>
                        </h4>
                        <article>
                            <%= posts[index].description?.slice(0,300) %>
                                <% if (posts[index].description?.length> 299) { %> ...
